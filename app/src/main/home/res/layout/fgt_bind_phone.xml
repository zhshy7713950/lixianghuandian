<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<include layout="@layout/layout_topbar"/>

	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
			xmlns:app="http://schemas.android.com/apk/res-auto"
			app:qmui_borderColor="@color/white"
			app:qmui_backgroundColor="@color/white"
			android:orientation="vertical"
			app:qmui_radius="10dp"
			android:padding="10dp"
			android:elevation="2dp"
			android:layout_margin="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<EditText
				android:maxLength="11"
				android:inputType="phone"
				android:textSize="12sp"
				android:hint="请输入您要绑定的手机号码"
				android:textColor="@color/text_color"
				android:id="@+id/et_phone_bind_phone"
				android:background="@color/transparent"
				android:layout_width="match_parent"
				android:layout_height="45dp"/>

		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="45dp">

			<EditText
					android:inputType="number"
					android:textSize="12sp"
					android:hint="请输入获取的验证码"
					android:textColor="@color/text_color"
					android:id="@+id/et_code_bind_phone"
					android:background="@color/transparent"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="40dp"/>

			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:layout_gravity="center"
					app:qmui_radius="3dp"
					android:id="@+id/fl_get_code_bind_phone"
					app:qmui_backgroundColor="@color/app_color"
					app:qmui_borderColor="@color/app_color"
					android:padding="5dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				<TextView
						android:id="@+id/tv_get_code_bind_phoen"
						android:textSize="12sp"
						android:textColor="@color/white"
						android:text="获取验证码"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>
		</LinearLayout>
	</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:id="@+id/btn_bind_phone"
			android:layout_marginTop="20dp"
			app:qmui_borderColor="@color/black"
			app:qmui_backgroundColor="@color/black"
			app:qmui_radius="20dp"
			android:textColor="@color/white"
			android:textSize="14sp"
			android:text="确认绑定"
			android:layout_gravity="center"
			android:layout_height="45dp"/>

</LinearLayout>