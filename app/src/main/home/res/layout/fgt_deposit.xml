<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/bg_gray"
		android:orientation="vertical">

	<include layout="@layout/layout_topbar" />

	<ScrollView
			android:id="@+id/scroll_account_deposit"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:layout_margin="10dp"
					android:elevation="2dp"
					app:qmui_backgroundColor="@color/black"
					app:qmui_borderColor="@color/black"
					app:qmui_radius="10dp">


				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">


					<ImageView
							android:id="@+id/iv_battery_account_deposit"
							android:layout_width="60dp"
							android:layout_height="40dp"
							android:layout_margin="10dp"
							android:src="@drawable/battery_five" />

					<TextView
							android:id="@+id/tv_battery_num_account_deposit"
							android:layout_width="wrap_content"
							android:layout_height="20dp"
							android:layout_alignTop="@id/iv_battery_account_deposit"
							android:layout_toRightOf="@+id/iv_battery_account_deposit"
							android:paddingLeft="5dp"
							android:text="当前电池编号："
							android:textColor="@color/white"
							android:textSize="12sp" />

					<TextView
							android:id="@+id/tv_battery_model_account_deposit"
							android:layout_width="wrap_content"
							android:layout_height="20dp"
							android:layout_below="@+id/tv_battery_num_account_deposit"
							android:layout_toRightOf="@+id/iv_battery_account_deposit"
							android:paddingLeft="5dp"
							android:text="当前电池型号："
							android:textColor="@color/white"
							android:textSize="12sp" />


					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentBottom="true"
							android:layout_centerHorizontal="true"
							android:layout_marginBottom="30dp"
							android:orientation="horizontal">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="¥ "
								android:textColor="@color/white"
								android:textSize="18sp" />

						<TextView
								android:id="@+id/tv_money_account_deposit"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="@color/white"
								android:textSize="32sp"
								tools:text="0" />
					</LinearLayout>
				</RelativeLayout>

			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="18dp"
					android:layout_height="18dp"
					android:text="i"
					android:layout_marginLeft="12dp"
					android:textColor="@color/white"
					android:textStyle="bold"
					android:textSize="13sp"
					android:gravity="center"
					android:background="@drawable/round_txt_bg"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="本套餐取电起租后，不支持退租金"
				    android:layout_marginLeft="4dp"
					android:textSize="12sp"/>
			</LinearLayout>
			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:elevation="2dp"
					android:orientation="vertical"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					app:qmui_backgroundColor="@color/white"
					app:qmui_borderColor="@color/white"
					app:qmui_radius="10dp">

				<EditText
						android:id="@+id/et_agnet_name_deposit"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@color/transparent"
						android:hint="请输入经销商"
						android:inputType="textWebEditText"
						android:textColor="@color/black_3"
						android:textSize="14sp" />
			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


			<TextView
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:gravity="center_vertical"
					android:paddingLeft="10dp"
					android:text="请选择是否整租车架"
					android:textSize="14sp" />

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="70dp"
					android:orientation="horizontal"
					android:padding="10dp">

				<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
						android:id="@+id/btn_yes_account_deposit"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_gravity="center"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_weight="1"
						android:elevation="2dp"
						android:text="是"
						android:textColor="@color/white"
						app:qmui_backgroundColor="@color/black"
						app:qmui_borderColor="@color/black"
						app:qmui_radius="2dp" />

				<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
						android:id="@+id/btn_no_account_deposit"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_gravity="center"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_weight="1"
						android:elevation="2dp"
						android:text="否"
						android:textColor="@color/black"
						app:qmui_backgroundColor="@color/white"
						app:qmui_borderColor="@color/white"
						app:qmui_radius="2dp" />

			</LinearLayout>

			<TextView
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:gravity="center_vertical"
					android:paddingLeft="10dp"
					android:text="可选套餐"
					android:textSize="14sp" />

			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
					android:id="@+id/ll_package_select_deposit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:elevation="2dp"
					android:orientation="vertical"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					app:qmui_backgroundColor="@color/white"
					app:qmui_borderColor="@color/white"
					app:qmui_radius="10dp">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<TextView
							android:id="@+id/tv_select_package_deposit"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:text="请选择套餐"
							android:textColor="@color/black_3"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_enter_select_package_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/enter" />
				</LinearLayout>

				<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/rv_select_package_deposit"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:visibility="gone" />
			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


			<TextView
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:gravity="center_vertical"
					android:paddingLeft="10dp"
					android:text="请选择组合方式"
					android:textSize="14sp" />

			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
					android:id="@+id/ll_combination_deposit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:elevation="2dp"
					android:orientation="vertical"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					app:qmui_backgroundColor="@color/white"
					app:qmui_borderColor="@color/white"
					app:qmui_radius="10dp">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<TextView
							android:id="@+id/tv_combination_deposit"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:text="请选择组合方式"
							android:textColor="@color/black_3"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_enter_combination_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/enter" />
				</LinearLayout>

				<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/rv_combination_deposit"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:visibility="gone" />

			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


			<TextView
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:gravity="center_vertical"
					android:paddingLeft="10dp"
					android:text="请选择支付方式"
					android:textSize="14sp" />


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:elevation="2dp"
					android:orientation="vertical"
					android:padding="10dp"
					app:qmui_backgroundColor="@color/white"
					app:qmui_borderColor="@color/white"
					app:qmui_radius="10dp">

				<LinearLayout
						android:id="@+id/ll_wechat_account_deposit"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/wechat" />

					<TextView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:paddingLeft="10dp"
							android:text="微信支付"
							android:textColor="@color/app_color"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_check_wechat_account_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/check" />
				</LinearLayout>

				<LinearLayout
						android:id="@+id/ll_alipay_account_deposit"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/alipay" />

					<TextView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:paddingLeft="10dp"
							android:text="支付宝支付"
							android:textColor="@color/app_color"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_check_alipay_account_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/check" />
				</LinearLayout>

				<LinearLayout
						android:id="@+id/ll_zhima_account_deposit"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/pre_alipay" />

					<TextView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:paddingLeft="10dp"
							android:text="芝麻信用"
							android:textColor="@color/app_color"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_check_zhima_account_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/check" />
				</LinearLayout>

				<LinearLayout
						android:id="@+id/ll_credit_account_deposit"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/xinyongbaitiao" />

					<TextView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:paddingLeft="10dp"
							android:text="信用白条"
							android:textColor="@color/app_color"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_check_credit_account_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/check" />
				</LinearLayout>
				<LinearLayout
						android:id="@+id/groupPayLayout"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/group_pay_image"
							tools:ignore="ContentDescription" />

					<TextView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:layout_marginStart="10dp"
							android:text="集团支付"
							android:textColor="@color/app_color"
							android:textSize="14sp"
							tools:ignore="HardcodedText" />


					<ImageView
							android:id="@+id/groupPayImage"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/check"
							tools:ignore="ContentDescription" />
				</LinearLayout>

				<LinearLayout
						android:id="@+id/ll_cash_account_deposit"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:orientation="horizontal">

					<ImageView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/xianxia" />

					<TextView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:paddingLeft="10dp"
							android:text="线下支付"
							android:textColor="@color/app_color"
							android:textSize="14sp" />


					<ImageView
							android:id="@+id/iv_check_cash_account_deposit"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_gravity="center"
							android:scaleType="centerInside"
							android:src="@drawable/check" />
				</LinearLayout>


			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
					android:id="@+id/btn_pay_now_account_deposit"
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_gravity="center"
					android:layout_margin="20dp"
					android:layout_weight="1"
					android:elevation="2dp"
					android:text="立即支付"
					android:textColor="@color/white"
					app:qmui_backgroundColor="@color/app_color"
					app:qmui_borderColor="@color/app_color"
					app:qmui_radius="2dp" />


			<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="40dp">

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="20dp"
						android:layout_gravity="center"
						android:orientation="horizontal">

					<ImageView
							android:id="@+id/iv_check"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:layout_marginRight="5dp"
							android:scaleType="centerInside"
							android:src="@drawable/uncheck" />

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="20dp"
							android:gravity="center_vertical"
							android:text="我已仔细阅读并同意"
							android:textColor="@color/app_color"
							android:textSize="12sp" />

					<TextView
							android:id="@+id/tv_view_rant_protocol_account_ya"
							android:layout_width="wrap_content"
							android:layout_height="20dp"
							android:gravity="center_vertical"
							android:text="租赁协议"
							android:textColor="#1296DB"
							android:textSize="12sp" />
				</LinearLayout>
			</FrameLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>