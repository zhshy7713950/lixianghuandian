<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:orientation="vertical"
		android:padding="30dp"
		app:rv_backgroundColor="@color/white"
		app:rv_cornerRadius="10dp">

	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			app:qmui_backgroundColor="@color/bg_gray"
			app:qmui_borderColor="@color/bg_gray"
			app:qmui_radius="5dp">

		<EditText
				android:id="@+id/et_input_device_code"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@color/transparent"
				android:hint="请输入设备编码"
				android:textSize="14sp" />
	</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
			android:id="@+id/btn_submit_device_code"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="35dp"
			android:layout_marginRight="20dp"
			android:text="确认提交"
			android:textColor="@color/white"
			app:qmui_backgroundColor="@color/app_color"
			app:qmui_borderColor="@color/app_color" />
</com.flyco.roundview.RoundLinearLayout>