<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">

    <include layout="@layout/layout_topbar" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:elevation="2dp"
                    app:qmui_backgroundColor="@color/black"
                    app:qmui_borderColor="@color/black"
                    app:qmui_radius="10dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/iv_battery_pay_rent_money"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/battery_five" />

                    <TextView
                            android:id="@+id/tv_battery_num_pay_rent_money"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignTop="@id/iv_battery_pay_rent_money"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/iv_battery_pay_rent_money"
                            android:text="当前电池编号："
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/tv_battery_model_pay_rent_money"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/tv_battery_num_pay_rent_money"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/iv_battery_pay_rent_money"
                            android:text="当前电池型号："
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥ "
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        <TextView
                                android:id="@+id/tv_money_pay_rent_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="32sp"
                                tools:text="0" />

                        <TextView
                                android:id="@+id/tv_insurance_money_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:text="(不含保费)"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:visibility="gone" />
                    </LinearLayout>

                </RelativeLayout>

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/white"
                    app:qmui_radius="10dp">

                <LinearLayout
                        android:id="@+id/ll_enter_rant_long_pay_rant_now"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_rant_long_pay_rent_money"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="请选择租借时长"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />


                    <ImageView
                            android:id="@+id/iv_enter_rant_long"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/enter" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_rant_long_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/white"
                    app:qmui_radius="10dp">

                <TextView
                        android:id="@+id/tv_agnet_name_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:text="经销商代码"
                        android:textColor="@color/black_3"
                        android:textSize="14sp" />
            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="当前租赁组合方式："
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:qmui_backgroundColor="@color/white"
                        app:qmui_borderColor="@color/white"
                        app:qmui_radius="10dp">

                    <TextView
                            android:id="@+id/tv_combination_pay_rent_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:text="当前租赁组合方式"
                            android:textColor="#BDBDBD"
                            android:textSize="15sp" />
                </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
                        android:id="@+id/qfl_change_combination_pay_rent"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:elevation="2dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        app:qmui_backgroundColor="#00A0E9"
                        app:qmui_borderWidth="0dp"
                        app:qmui_radius="10dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:text="更换"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="请选择支付方式"
                    android:textSize="14sp" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/white"
                    app:qmui_radius="10dp">

                <LinearLayout
                        android:id="@+id/ll_wechat_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/wechat" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="微信支付"
                            android:textColor="@color/app_color"
                            android:textSize="14sp" />


                    <ImageView
                            android:id="@+id/iv_check_wechat_pay_rent_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/check" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_alipay_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/alipay" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="支付宝支付"
                            android:textColor="@color/app_color"
                            android:textSize="14sp" />


                    <ImageView
                            android:id="@+id/iv_check_alipay_pay_rent_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/check" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_installment_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_installment" />

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="分期免息"
                                android:textColor="@color/app_color"
                                android:textSize="14sp" />


                    </LinearLayout>


                    <ImageView
                            android:id="@+id/iv_check_installment_pay_rent_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/check" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_credit_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/xinyongbaitiao" />

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="信用白条"
                                android:textColor="@color/app_color"
                                android:textSize="14sp" />


                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="（首付一个月）"
                                android:textColor="@color/app_red"
                                android:textSize="14sp" />

                    </LinearLayout>


                    <ImageView
                            android:id="@+id/iv_check_credit_pay_rent_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/check" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/groupPayLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/group_pay_image"
                            tools:ignore="ContentDescription" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:text="集团支付"
                            android:textColor="@color/app_color"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />


                    <ImageView
                            android:id="@+id/groupPayImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/check"
                            tools:ignore="ContentDescription" />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/ll_cash_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/xianxia" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="线下支付"
                            android:textColor="@color/app_color"
                            android:textSize="14sp" />


                    <ImageView
                            android:id="@+id/iv_check_cash_pay_rent_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/check" />
                </LinearLayout>


            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                    android:id="@+id/ll_ticket_pay_rant_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/white"
                    app:qmui_radius="10dp">

                <LinearLayout
                        android:id="@+id/ll_enter_ticket_pay_rent_money"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_ticket_pay_rent_money"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="请选择优惠券"
                            android:textColor="@color/black_3"
                            android:textSize="14sp" />


                    <ImageView
                            android:id="@+id/iv_enter_ticket"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/enter" />
                </LinearLayout>

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:text="是否购买保险"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/tv_insurance_money"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_red"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="保费:*.**" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:visibility="gone"
                    android:padding="10dp">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/btn_yes_buy_insurance"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:text="是"
                        android:textColor="@color/white"
                        app:qmui_backgroundColor="@color/black"
                        app:qmui_borderColor="@color/black"
                        app:qmui_radius="2dp" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/btn_no_buy_insurance"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:elevation="2dp"
                        android:text="否"
                        android:textColor="@color/black"
                        app:qmui_backgroundColor="@color/white"
                        app:qmui_borderColor="@color/white"
                        app:qmui_radius="2dp" />

            </LinearLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn_pay_now_pay_rent_money"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:text="立即支付"
                    android:textColor="@color/white"
                    app:qmui_backgroundColor="@color/app_color"
                    app:qmui_borderColor="@color/app_color"
                    app:qmui_radius="2dp" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn_return_deposit_pay_rent_money"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:text="不想租了立即退押金"
                    android:textColor="@color/white"
                    app:qmui_backgroundColor="#F39800"
                    app:qmui_borderWidth="0dp"
                    app:qmui_radius="2dp" />


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/iv_check_pay_rent_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/uncheck" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:text="我已仔细阅读并同意"
                            android:textColor="@color/app_color"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/tv_view_rant_protocol_pay_rent_money"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:text="租赁协议"
                            android:textColor="#1296DB"
                            android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>