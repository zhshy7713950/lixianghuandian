<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_no_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272831"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradiant_bg_home">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/home_bg"
            android:layout_marginBottom="40dp"/>
    </FrameLayout>




    <TextView
        android:id="@+id/tv_log_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="您还没有添加电池设备"
        android:textColor="@color/white"
        />


    <FrameLayout

        android:id="@+id/addDeviceBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_btn_common1"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add_device"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_scan_blank" />

            <TextView
                android:id="@+id/tv_add_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="点击添加"
                android:textSize="15sp"
                android:textColor="#272934" />
        </LinearLayout>
    </FrameLayout>
    <TextView

        android:id="@+id/btnReturn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:text="点击退还电池"
        android:textSize="15sp"
        android:textColor="#272934"
        android:gravity="center"
        android:background="@drawable/bg_btn_common1"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>