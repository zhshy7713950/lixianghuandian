<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<include layout="@layout/layout_topbar"/>

	<FrameLayout
			android:background="@color/bg_gray"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout
				android:visibility="gone"
				android:id="@+id/ll_status_no_card_bind_card"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<ImageView
					android:layout_marginTop="30dp"
					android:src="@drawable/bg_no_bank_cark_bind_bank"
					android:layout_gravity="center"
					android:layout_width="100dp"
					android:layout_height="100dp"/>

			<TextView
					android:layout_marginTop="20dp"
					android:gravity="center"
					android:text="您还没有绑定银行卡点击下面按钮立即绑定"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:elevation="2dp"
					android:id="@+id/btn_add_card_bind_card"
					android:layout_width="match_parent"
					app:qmui_borderColor="@color/app_color"
					app:qmui_backgroundColor="@color/app_color"
					android:layout_margin="30dp"
					android:textColor="@color/white"
					android:text="添加"
					android:layout_height="45dp"/>
		</LinearLayout>


		<LinearLayout
				android:visibility="gone"
				android:id="@+id/ll_status_binding_bind_card"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
					android:padding="10dp"
					android:orientation="vertical"
					app:qmui_borderColor="@color/white"
					app:qmui_radius="10dp"
					app:qmui_backgroundColor="@color/white"
					android:layout_margin="20dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">


				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="40dp">

					<TextView
							android:textColor="@color/text_color"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:text="请输入银行卡号"
							android:background="@color/transparent"
							android:layout_marginLeft="10dp"
							android:layout_width="110dp"
							android:layout_height="match_parent"/>

					<EditText
							android:inputType="number"
							android:id="@+id/et_card_bind_card"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:background="@color/transparent"
							android:layout_marginRight="10dp"
							android:layout_weight="2"
							android:layout_width="0dp"
							android:layout_height="match_parent"/>

				</LinearLayout>

				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="40dp">

					<TextView
							android:textColor="@color/text_color"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:text="请输入姓名"
							android:background="@color/transparent"
							android:layout_marginLeft="10dp"
							android:layout_width="110dp"
							android:layout_height="match_parent"/>

					<EditText
							android:id="@+id/et_name_bind_card"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:background="@color/transparent"
							android:layout_marginRight="10dp"
							android:layout_weight="2"
							android:layout_width="0dp"
							android:layout_height="match_parent"/>

				</LinearLayout>

				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="40dp">

					<TextView
							android:textColor="@color/text_color"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:text="请输入预手机号"
							android:background="@color/transparent"
							android:layout_marginLeft="10dp"
							android:layout_width="110dp"
							android:layout_height="match_parent"/>

					<EditText
							android:inputType="phone"
							android:id="@+id/et_phone_bind_card"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:background="@color/transparent"
							android:layout_marginRight="10dp"
							android:layout_weight="2"
							android:layout_width="0dp"
							android:layout_height="match_parent"/>

				</LinearLayout>

				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="40dp">

					<TextView
							android:textColor="@color/text_color"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:text="请输入验证码"
							android:background="@color/transparent"
							android:layout_marginLeft="10dp"
							android:layout_width="110dp"
							android:layout_height="match_parent"/>

					<EditText
							android:inputType="number"
							android:id="@+id/et_code_bind_card"
							android:gravity="center_vertical"
							android:textSize="12sp"
							android:background="@color/transparent"
							android:layout_marginRight="10dp"
							android:layout_weight="2"
							android:layout_width="0dp"
							android:layout_height="match_parent"/>


					<TextView
							android:layout_marginRight="10dp"
							android:id="@+id/tv_get_code_bind_card"
							android:textSize="12sp"
							android:padding="3dp"
							android:background="@color/app_color"
							android:textColor="@color/white"
							android:text="获取验证码"
							android:layout_gravity="center"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>


			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:elevation="2dp"
					android:id="@+id/btn_submit_bind_card"
					android:layout_width="match_parent"
					app:qmui_borderColor="@color/app_color"
					app:qmui_backgroundColor="@color/app_color"
					android:layout_margin="30dp"
					android:textColor="@color/white"
					android:text="确认添加"
					android:layout_height="45dp"/>

		</LinearLayout>


		<LinearLayout
				android:visibility="gone"
				android:id="@+id/ll_status_yet_bind_card"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
					android:padding="10dp"
					android:orientation="vertical"
					app:qmui_borderColor="@color/white"
					app:qmui_radius="10dp"
					app:qmui_backgroundColor="@color/white"
					android:layout_margin="20dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">


				<TextView
						android:id="@+id/tv_card_bind_card"
						android:gravity="center_vertical"
						android:textSize="12sp"
						android:text="卡号："
						android:background="@color/transparent"
						android:layout_marginLeft="10dp"
						android:layout_width="match_parent"
						android:layout_height="30dp"/>


				<TextView
						android:id="@+id/tv_name_bind_card"
						android:gravity="center_vertical"
						android:textSize="12sp"
						android:text="姓名："
						android:background="@color/transparent"
						android:layout_marginLeft="10dp"
						android:layout_width="match_parent"
						android:layout_height="30dp"/>



			</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


			<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:elevation="2dp"
					android:id="@+id/btn_unbindbank_bind_card"
					android:layout_width="match_parent"
					app:qmui_borderColor="@color/app_color"
					app:qmui_backgroundColor="@color/app_color"
					android:layout_margin="30dp"
					android:textColor="@color/white"
					android:text="解除绑定"
					android:layout_height="45dp"/>

		</LinearLayout>

	</FrameLayout>

</LinearLayout>