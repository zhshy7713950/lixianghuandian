<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
	android:background="#2E3440">

	<include layout="@layout/layout_topbar" />
	<ScrollView
		android:id="@+id/sv_contract"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/layout_battery1"
				android:layout_width="match_parent"
				android:layout_height="75dp"
				android:layout_marginTop="12dp"
				android:layout_marginLeft="12dp"
				android:layout_marginRight="12dp"
				android:visibility="visible"
				android:background="@drawable/rectangle_gray_bg">
				<ImageView
					android:id="@+id/iv_battery_pay_rent_money"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					android:src="@mipmap/battery_five"
					android:layout_marginLeft="16dp"
					android:layout_marginTop="20dp"/>
				<TextView
					android:id="@+id/tv2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="电池编号"
					android:layout_marginLeft="136dp"
					android:layout_marginTop="16dp"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					android:textColor="#ffb2c1ce"
					android:textSize="12sp"
					/>
				<TextView
					android:id="@+id/tv_battery_num_pay_rent_money"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:text="10000222"
					android:layout_marginLeft="136dp"
					android:layout_marginTop="37dp"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					android:textColor="#ffffffff"
					android:textSize="16sp"
					/>

				<TextView
					android:id="@+id/tv1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="电池型号"
					android:textColor="#ffb2c1ce"
					android:textSize="12sp"
					android:layout_marginRight="41dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					android:layout_marginTop="16dp"
					/>
				<TextView
					android:id="@+id/tv_battery_model_pay_rent_money"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:text="48伏50安"
					android:textColor="#ffffffff"
					app:layout_constraintLeft_toLeftOf="@id/tv1"
					app:layout_constraintTop_toBottomOf="@id/tv1"
					android:layout_marginTop="4dp"
					android:textSize="16sp"
					/>
				<View
					android:layout_width="0.5dp"
					android:layout_height="44dp"
					android:background="@drawable/lin_ver"
					android:layout_marginLeft="53dp"
					android:layout_marginTop="16dp"
					android:layout_marginRight="24dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintRight_toLeftOf="@id/tv1"
					app:layout_constraintLeft_toRightOf="@id/tv2"/>

			</androidx.constraintlayout.widget.ConstraintLayout>
			<LinearLayout
				android:id="@+id/layout_battery2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="10dp"
				android:orientation="vertical"
				android:paddingLeft="14dp"
				android:background="@drawable/rectangle_gray_bg">
				<TextView
					android:id="@+id/tv_device_num_my_contract_detail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="电池编号：20000155"
					android:textColor="#ffffffff"
					android:textSize="14sp"
					android:layout_marginTop="14dp"
					/>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.5dp"
					android:background="@drawable/shape_line"
					android:layout_marginTop="10dp"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="型        号："
						android:textColor="#ff929fab"
						android:textSize="12sp"
						/>
					<TextView
						android:id="@+id/tv_device_model_my_contract_detail"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="48伏60安"
						android:textColor="#ffffffff"
						android:textSize="12sp"
						/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="租用时长："
						android:textColor="#ff929fab"
						android:textSize="12sp"
						/>

					<TextView
						android:id="@+id/tv_rent_long_my_contract_detail"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="12sp"
						android:textColor="@color/white"
						tools:text="9个月" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="押        金："
						android:textColor="#ff929fab"
						android:textSize="12sp"
						/>
					<TextView
						android:id="@+id/tv_deposit_my_contract_detail"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="48伏60安"
						android:textColor="#ffffffff"
						android:textSize="12sp"
						/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="租        金："
						android:textColor="#ff929fab"
						android:textSize="12sp"
						/>

					<TextView
						android:id="@+id/tv_rent_money_my_contract_detail"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="12sp"
						android:textColor="@color/white"
						tools:text="9个月" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/tv_base_package"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="租电套餐："
						android:layout_weight="1"
						android:textColor="#ff929fab"
						android:textSize="12sp"
						/>
					<TextView
						android:id="@+id/tv_base_package_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						tools:text="2023/01/02至2023/04/02"
						android:textColor="#ffffffff"
						android:drawableLeft="@mipmap/ic_trajector_calendar"
						android:drawablePadding="5dp"
						android:textSize="12sp"
						/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/tv_change_package"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="换电套餐："
						android:layout_weight="1"
						android:layout_gravity="center_vertical"
						android:textColor="#ff929fab"
						android:textSize="12sp"
						/>
					<TextView
						android:id="@+id/tv_change_package_time"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_gravity="center_vertical"
						tools:text="2023/01/02至2023/04/02"
						android:textColor="#ffffffff"
						android:drawableLeft="@mipmap/ic_trajector_calendar"
						android:drawablePadding="5dp"
						android:textSize="12sp"
						/>
				</LinearLayout>


			</LinearLayout>

			<TextView
				android:id="@+id/tv_contract_page"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="合同预览 (1/10)"
				android:textColor="#ffffffff"
				android:layout_marginLeft="12dp"
				android:layout_marginTop="10dp"
				android:textSize="15sp"
				/>






				<androidx.viewpager.widget.ViewPager
					android:id="@+id/vp_sign_contract"
					android:layout_width="match_parent"
					android:layout_height="500dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="12dp"
					android:layout_weight="1"
					/>
				<wongxd.indicator.IndefinitePagerIndicator
					android:id="@+id/indicator"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginTop="10dp"
					app:dotColor="#778692"
					app:selectedDotColor="#22DF98"/>

				<TextView
					android:id="@+id/btn_sign_contract"
					android:layout_width="match_parent"
					android:background="@drawable/bg_btn_common1"
					android:layout_height="42dp"
					android:layout_gravity="center"
					android:layout_marginLeft="25dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="25dp"
					android:layout_marginBottom="40dp"
					android:text="我已确认合同内容（5s）"
					android:textColor="#272934"
					android:textSize="15sp"
					android:gravity="center" />


		</LinearLayout>
	</ScrollView>




</LinearLayout>