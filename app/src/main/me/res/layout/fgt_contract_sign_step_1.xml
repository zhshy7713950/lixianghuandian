<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
	android:background="#2E3440">

	<include layout="@layout/layout_topbar" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:orientation="vertical"
		android:paddingLeft="14dp"
		android:background="@drawable/rectangle_gray_bg">
		<TextView
			android:id="@+id/tv_device_num_my_contract_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="电池编号：20000155"
			android:textColor="#ffffffff"
			android:textSize="14sp"
			android:layout_marginTop="14dp"
			/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@drawable/shape_line"
			android:layout_marginTop="10dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="型        号："
				android:textColor="#ff929fab"
				android:textSize="12sp"
				/>
			<TextView
				android:id="@+id/tv_device_model_my_contract_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="48伏60安"
				android:textColor="#ffffffff"
				android:textSize="12sp"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="租用时长："
				android:textColor="#ff929fab"
				android:textSize="12sp"
				/>

			<TextView
				android:id="@+id/tv_rent_long_my_contract_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="12sp"
				android:textColor="@color/white"
				tools:text="9个月" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="押        金："
				android:textColor="#ff929fab"
				android:textSize="12sp"
				/>
			<TextView
				android:id="@+id/tv_deposit_my_contract_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="48伏60安"
				android:textColor="#ffffffff"
				android:textSize="12sp"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="租        金："
				android:textColor="#ff929fab"
				android:textSize="12sp"
				/>

			<TextView
				android:id="@+id/tv_rent_money_my_contract_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="12sp"
				android:textColor="@color/white"
				tools:text="9个月" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_base_package"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="基本套餐："
				android:layout_weight="1"
				android:textColor="#ff929fab"
				android:textSize="12sp"
				/>
			<TextView
				android:id="@+id/tv_base_package_time"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				tools:text="2023/01/02至2023/04/02"
				android:textColor="#ffffffff"
				android:drawableLeft="@mipmap/ic_trajector_calendar"
				android:drawablePadding="5dp"
				android:textSize="12sp"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_change_package"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="换电套餐："
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:textColor="#ff929fab"
				android:textSize="12sp"
				/>
			<TextView
				android:id="@+id/tv_change_package_time"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				tools:text="2023/01/02至2023/04/02"
				android:textColor="#ffffffff"
				android:drawableLeft="@mipmap/ic_trajector_calendar"
				android:drawablePadding="5dp"
				android:textSize="12sp"
				/>
		</LinearLayout>


	</LinearLayout>

	<TextView
		android:id="@+id/tv_contract_page"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="合同预览 (1/10)"
		android:textColor="#ffffffff"
		android:layout_marginLeft="12dp"
		android:textSize="15sp"
		/>




	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:orientation="vertical">

		<androidx.viewpager.widget.ViewPager
				android:id="@+id/vp_sign_contract"
				android:layout_width="match_parent"
				android:layout_height="0dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
				android:layout_weight="1"
				 />
		<wongxd.indicator.IndefinitePagerIndicator
			android:id="@+id/indicator"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			app:dotColor="#778692"
			app:selectedDotColor="#22DF98"/>

		<TextView
				android:id="@+id/btn_sign_contract"
				android:layout_width="match_parent"
			android:background="@drawable/bg_btn_common1"
				android:layout_height="42dp"
				android:layout_gravity="center"
				android:layout_marginLeft="25dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="25dp"
				android:layout_marginBottom="10dp"
				android:text="我已确认合同内容（5s）"
				android:textColor="#272934"
				android:textSize="15sp"
			android:gravity="center" />

	</LinearLayout>


</LinearLayout>