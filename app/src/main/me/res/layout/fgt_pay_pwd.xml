<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<include layout="@layout/layout_topbar"/>

	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
			android:padding="10dp"
			android:orientation="vertical"
			app:qmui_borderColor="@color/white"
			app:qmui_radius="10dp"
			app:qmui_backgroundColor="@color/white"
			android:layout_margin="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<TextView
					android:textColor="@color/text_color"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:text="手机号码"
					android:background="@color/transparent"
					android:layout_marginLeft="10dp"
					android:layout_width="110dp"
					android:layout_height="match_parent"/>

			<EditText
					android:inputType="phone"
					android:id="@+id/et_phone_pay_pwd"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:background="@color/transparent"
					android:layout_marginRight="10dp"
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>

		</LinearLayout>

		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<TextView
					android:textColor="@color/text_color"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:text="请输入验证码"
					android:background="@color/transparent"
					android:layout_marginLeft="10dp"
					android:layout_width="110dp"
					android:layout_height="match_parent"/>

			<EditText
					android:inputType="number"
					android:id="@+id/et_code_pay_pwd"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:background="@color/transparent"
					android:layout_marginRight="10dp"
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>


			<TextView
					android:layout_marginRight="10dp"
					android:id="@+id/tv_get_code_pay_pwd"
					android:textSize="12sp"
					android:padding="3dp"
					android:background="@color/app_color"
					android:textColor="@color/white"
					android:text="获取验证码"
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
		</LinearLayout>

		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<TextView
					android:textColor="@color/text_color"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:text="请输入支付密码"
					android:background="@color/transparent"
					android:layout_marginLeft="10dp"
					android:layout_width="110dp"
					android:layout_height="match_parent"/>

			<EditText
					android:inputType="textPassword"
					android:id="@+id/et_pwd_pay_pwd"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:background="@color/transparent"
					android:layout_marginRight="10dp"
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>

		</LinearLayout>

		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<TextView
					android:textColor="@color/text_color"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:text="请再次输入支付密码"
					android:background="@color/transparent"
					android:layout_marginLeft="10dp"
					android:layout_width="110dp"
					android:layout_height="match_parent"/>

			<EditText
					android:inputType="textPassword"
					android:id="@+id/et_pwd_again_phone_pay_pwd"
					android:gravity="center_vertical"
					android:textSize="12sp"
					android:background="@color/transparent"
					android:layout_marginRight="10dp"
					android:layout_weight="2"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>

		</LinearLayout>

	</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:elevation="2dp"
			android:id="@+id/btn_submit_pay_pwd"
			android:layout_width="match_parent"
			app:qmui_borderColor="@color/app_color"
			app:qmui_backgroundColor="@color/app_color"
			android:layout_margin="30dp"
			android:textColor="@color/white"
			android:text="确认"
			android:layout_height="45dp"/>

</LinearLayout>