<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<include layout="@layout/layout_topbar"/>

	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
			xmlns:app="http://schemas.android.com/apk/res-auto"
			app:qmui_backgroundColor="@color/white"
			android:layout_width="match_parent"
			app:qmui_borderColor="@color/white"
			app:qmui_radius="10dp"
			android:padding="10dp"
			android:elevation="2dp"
			android:orientation="vertical"
			android:layout_margin="10dp"
			android:layout_height="wrap_content">

		<LinearLayout
				android:id="@+id/ll_clean_cache_setting"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<ImageView
					android:layout_gravity="center"
					android:src="@drawable/clear_setting"
					android:layout_width="20dp"
					android:layout_height="20dp"/>

			<TextView
					android:textSize="12sp"
					android:gravity="center_vertical"
					android:text="清除缓存"
					android:layout_marginLeft="70dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
		</LinearLayout>

		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/bg_gray"/>

		<LinearLayout
				android:id="@+id/ll_help_center_setting"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<ImageView
					android:layout_gravity="center"
					android:src="@drawable/help_center_setting"
					android:layout_width="20dp"
					android:layout_height="20dp"/>

			<TextView
					android:textSize="12sp"
					android:gravity="center_vertical"
					android:text="帮助中心"
					android:layout_marginLeft="70dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
		</LinearLayout>

		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/bg_gray"/>

		<LinearLayout
				android:id="@+id/ll_about_us_setting"
				android:layout_width="match_parent"
				android:layout_height="40dp">

			<ImageView
					android:layout_gravity="center"
					android:src="@drawable/about_us_setting"
					android:layout_width="20dp"
					android:layout_height="20dp"/>

			<TextView
					android:textSize="12sp"
					android:gravity="center_vertical"
					android:text="关于我们"
					android:layout_marginLeft="70dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="match_parent"/>
		</LinearLayout>

	</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_margin="20dp"
			android:id="@+id/btn_logout_setting"
			app:qmui_borderColor="@color/app_color"
			app:qmui_backgroundColor="@color/app_color"
			android:text="退出登录"

			android:textColor="@color/white"
			android:layout_height="50dp"/>

	<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>

	<TextView
			android:textColor="@color/text_color"
			android:id="@+id/tv_version_setting"
			android:layout_marginBottom="30dp"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
</LinearLayout>