<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<com.qmuiteam.qmui.widget.QMUITopBar
			android:id="@+id/topbar"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="vertical" />


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:layout_margin="20dp"
			android:layout_height="0dp">

		<ImageView
				android:id="@+id/iv_share"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


	<LinearLayout
			android:layout_marginRight="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginBottom="20dp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<LinearLayout
				android:id="@+id/ll_qq_share"
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content">

			<ImageView
					android:layout_marginLeft="10dp"
					android:src="@drawable/qq_share"
					android:layout_width="50dp"
					android:layout_height="50dp"/>

			<TextView
					android:layout_marginLeft="10dp"
					android:text="QQ好友"
					android:layout_width="match_parent"
					android:layout_height="30dp"/>
		</LinearLayout>


		<LinearLayout
				android:id="@+id/ll_wechat_share"
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content">

			<ImageView
					android:layout_gravity="center"
					android:src="@drawable/wechat_share"
					android:layout_width="50dp"
					android:layout_height="50dp"/>

			<TextView
					android:gravity="center"
					android:text="微信好友"
					android:layout_width="match_parent"
					android:layout_height="30dp"/>
		</LinearLayout>


		<LinearLayout
				android:id="@+id/ll_qrcode_share"
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content">

			<ImageView
					android:layout_marginRight="10dp"
					android:layout_gravity="right"
					android:src="@drawable/qrcode_share"
					android:layout_width="50dp"
					android:layout_height="50dp"/>

			<TextView
					android:gravity="right|center_vertical"
					android:text="面对面分享"
					android:layout_width="match_parent"
					android:layout_height="30dp"/>
		</LinearLayout>

	</LinearLayout>
</LinearLayout>