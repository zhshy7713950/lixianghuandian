<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<include layout="@layout/layout_topbar"/>


		<ImageView
				android:layout_width="match_parent"
				android:adjustViewBounds="true"
				android:id="@+id/riv_card_front"
				android:src="@drawable/upload_auth_card_front"
				android:scaleType="fitXY"
				android:layout_margin="20dp"
				android:layout_height="wrap_content"/>


		<TextView
				android:text="手持身份证"
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="40dp"/>


		<ImageView
				android:src="@drawable/upload_auth_card_back"
				android:layout_width="match_parent"
				android:adjustViewBounds="true"
				android:id="@+id/riv_card_back"
				android:scaleType="fitXY"
				android:layout_margin="20dp"
				android:layout_height="wrap_content"/>


		<TextView
				android:text="实物+身份证"
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="40dp"/>



		<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/btn_next_step"
				android:layout_width="match_parent"
				android:text="下一步"
				android:layout_marginTop="40dp"
				android:layout_marginBottom="40dp"
				android:textColor="@color/white"
				app:qmui_borderColor="@color/app_color"
				android:layout_marginLeft="50dp"
				android:layout_marginRight="50dp"
				app:qmui_backgroundColor="@color/app_color"
				android:layout_height="50dp"/>



	</LinearLayout>
</ScrollView>