<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_coupon_purchase"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="25dp">

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#F9BB6C"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_coupon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥超值价"
        android:textColor="#fff9bb6c"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/tvMoney"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        tools:text="满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用满199可使用"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tvMoney"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="40dp"
        android:button="@drawable/radio_select"
        />


</androidx.constraintlayout.widget.ConstraintLayout>