<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                                            app:qmui_backgroundColor="@color/white"
                                                            app:qmui_borderColor="@color/app_color"
                                                            app:qmui_borderWidth="1dp"
                                                            android:orientation="vertical"
                                                            android:layout_width="300dp"
                                                            android:layout_height="wrap_content">

    <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_phone"
            android:layout_marginTop="20dp"
            android:maxLength="11"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        <EditText
                android:layout_marginLeft="10dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:id="@+id/et_code_bind_card"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:background="@color/transparent"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:qmui_borderColor="@color/app_color"
                app:qmui_radius="5dp"
                app:qmui_backgroundColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_get_code_bind_card"
                    android:textSize="12sp"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:text="获取验证码"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>
    </LinearLayout>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_marginBottom="20dp"
            android:textSize="12sp"
            android:id="@+id/btn_credit_contract"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            app:qmui_backgroundColor="@color/app_color"
            app:qmui_borderColor="@color/app_color"
            android:textColor="@color/white"
            android:text="确认提交"
            android:layout_gravity="center"
            android:layout_height="40dp"/>

</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>