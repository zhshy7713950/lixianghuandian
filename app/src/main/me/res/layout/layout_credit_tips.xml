<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                                            android:orientation="vertical"
															app:qmui_borderColor="@color/app_color"
															app:qmui_borderWidth="1dp"
                                                            app:qmui_radius="5dp"
                                                            android:layout_gravity="center"
                                                            app:qmui_backgroundColor="@color/white"
                                                            android:layout_width="250dp"
                                                            android:layout_height="wrap_content">

	<TextView
			android:layout_marginTop="20dp"
			android:textSize="20sp"
			android:textColor="@color/app_color"
			android:text="提示"
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

	<TextView
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:id="@+id/tv"
			android:layout_margin="20dp"
			android:gravity="center"
			android:text="请先完成信用认证后再进行签约"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
			android:layout_marginBottom="20dp"
			android:id="@+id/btn"
			android:layout_width="200dp"
			app:qmui_backgroundColor="@color/app_color"
			app:qmui_borderColor="@color/app_color"
			android:textColor="@color/white"
			android:text="确定"
			android:layout_gravity="center"
			android:layout_height="40dp"/>

</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>