<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<include layout="@layout/layout_topbar"/>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">


		<com.amap.api.maps.MapView
				android:id="@+id/mapView_nearby"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>


		<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
				android:elevation="3dp"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/fl_scan_nearby"
				android:layout_gravity="center_horizontal|bottom"
				android:layout_width="200dp"
				app:qmui_radius="20dp"
				app:qmui_borderColor="@color/app_color"
				app:qmui_backgroundColor="@color/app_color"
				android:layout_marginBottom="80dp"
				android:layout_height="40dp">

			<LinearLayout
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

				<ImageView
						android:src="@drawable/scan_nearby"
						android:layout_width="20dp"
						android:layout_height="20dp"/>

				<TextView
						android:textSize="14sp"
						android:layout_marginLeft="10dp"
						android:textColor="@color/white"
						android:text="扫描添加"
						android:gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="20dp"/>
			</LinearLayout>

		</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>

	</FrameLayout>

</LinearLayout>