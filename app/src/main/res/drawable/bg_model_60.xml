<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="80dp"
        android:height="36dp">
        <shape android:shape="rectangle">
            <solid android:color="#272D38"/>
            <stroke android:color="#545A64" android:width="1dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:width="25dp"
        android:height="25dp">
        <bitmap
            android:gravity="left|top"
            android:src="@drawable/ic_model_60"
            />
    </item>

</layer-list>