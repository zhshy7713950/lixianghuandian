<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/gray_F5"
		android:orientation="vertical">

	<com.qmuiteam.qmui.widget.QMUITopBar
			android:id="@+id/topbar"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:elevation="2dp" />

	<LinearLayout
			android:id="@+id/contentLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:visibility="gone">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="10dp"
				android:text="当前电池"
				android:textColor="#00A0E9"
				android:textSize="15sp" />

		<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:background="?attr/selectableItemBackground"
				android:orientation="vertical"
				android:padding="10dp"
				app:qmui_backgroundColor="#F6B37F"
				app:qmui_borderColor="#F6B37F"
				app:qmui_radius="5dp">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">

				<TextView
						android:id="@+id/currentNumberText"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:textColor="@color/black_3"
						android:textSize="13sp"
						tools:text="编号：1126" />

				<TextView
						android:id="@+id/currentValueText"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:textColor="@color/black_3"
						android:textSize="13sp"
						tools:text="电量：25%" />
			</LinearLayout>

			<TextView
					android:id="@+id/currentModelText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:textColor="@color/black_3"
					android:textSize="13sp"
					tools:text="型号：72V   20AH" />

		</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="10dp"
				android:text="更换为"
				android:textColor="#FF0000"
				android:textSize="15sp" />

		<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:background="?attr/selectableItemBackground"
				android:orientation="vertical"
				android:padding="10dp"
				app:qmui_backgroundColor="#00A0E9"
				app:qmui_borderColor="#00A0E9"
				app:qmui_radius="5dp">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">

				<TextView
						android:id="@+id/newNumberText"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:textColor="@color/white"
						android:textSize="13sp"
						tools:text="编号：1126" />

				<TextView
						android:id="@+id/newValueText"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:textColor="@color/white"
						android:textSize="13sp"
						tools:text="电量：25%" />
			</LinearLayout>

			<TextView
					android:id="@+id/newModelText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:textColor="@color/white"
					android:textSize="13sp"
					tools:text="型号：72V   20AH" />

		</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


		<TextView
				android:id="@+id/tipsText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="10dp"
				android:lineSpacingExtra="4dp"
				android:textColor="@color/gray_9a"
				android:textSize="13sp"
				tools:text=" 提示：后台设置提示内容后台设置提示内容后台设置提示内容后台设置提示内容" />


		<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
				android:id="@+id/confirmBtn"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="50dp"
				android:background="?attr/selectableItemBackground"
				app:qmui_backgroundColor="@color/app_color"
				app:qmui_borderColor="@color/app_color"
				app:qmui_radius="20dp">

			<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center"
					android:text="确认更换"
					android:textColor="@color/white"
					android:textSize="15sp" />

		</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

	</LinearLayout>

</LinearLayout>