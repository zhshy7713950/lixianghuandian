<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<com.qmuiteam.qmui.widget.QMUITopBar
		android:id="@+id/topbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/topbar_height"
		android:orientation="vertical"
		app:qmui_topbar_left_back_drawable_id="@drawable/ic_back_white"
		app:qmui_topbar_title_color="@color/white" />

	<FrameLayout
			android:id="@+id/fl_my_container"
			android:layout_width="match_parent"
			android:layout_marginTop="@dimen/topbar_height"
			android:layout_height="match_parent" />





		<TextView
			android:id="@+id/tv_input_code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="输入编号"
			android:textColor="#ffffffff"
			android:textSize="14sp"
			android:drawableTop="@mipmap/ic_input_code"
			android:layout_gravity="left|bottom"
			android:drawablePadding="14dp"
			android:gravity="center_horizontal"
			android:layout_marginBottom="100dp"
			android:layout_marginLeft="60dp"
			/>

		<TextView
			android:id="@+id/tv_light"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="打开手电筒"
			android:textColor="#ffffffff"
			android:textSize="14sp"
			android:drawableTop="@mipmap/ic_light"
			android:layout_gravity="right|bottom"
			android:drawablePadding="14dp"
			android:gravity="center_horizontal"
			android:layout_marginBottom="100dp"
			android:layout_marginRight="60dp"
			/>


</FrameLayout>