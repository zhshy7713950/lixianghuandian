<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<TextView
			android:layout_marginBottom="10dp"
			android:layout_width="match_parent"
			android:layout_height="@dimen/topbar_height"
			android:background="@color/app_color"
			android:gravity="center"
			android:text="@string/app_name"
			android:textColor="@color/white"
			android:textSize="16sp"/>

	<TextView
		android:id="@+id/tv_title1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="手机验证码登录"
		android:textColor="#232524"
		android:textSize="20sp"
		android:layout_marginLeft="10dp"
		/>

	<TextView
		android:id="@+id/tv_title2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="未注册的手机号验证后将创建新账号"
		android:textColor="#666666"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="8dp"
		android:textSize="14sp"
		android:layout_marginBottom="30dp"
		/>


	<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
			app:qmui_radius="5dp"
			android:layout_margin="10dp"
			app:qmui_borderColor="@color/bg_gray"
			app:qmui_backgroundColor="@color/bg_gray"
			android:layout_width="match_parent"
			android:layout_height="50dp">

		<EditText
				android:inputType="phone"
				android:layout_margin="10dp"
				android:textSize="14sp"
				android:hint="请输入手机号码"
				android:background="@color/transparent"
				android:id="@+id/et_phone"
				android:textColor="#232524"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
				app:qmui_radius="5dp"
				android:layout_margin="10dp"
				app:qmui_borderColor="@color/bg_gray"
				app:qmui_backgroundColor="@color/bg_gray"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="50dp">

			<EditText
					android:inputType="number"
					android:layout_margin="10dp"
					android:textSize="14sp"
					android:hint="请输入验证码"
					android:background="@color/transparent"
					android:id="@+id/et_code"
					android:textColor="#232524"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>

		</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


		<com.flyco.roundview.RoundTextView
				android:id="@+id/tv_get_code"
				android:layout_margin="10dp"
				app:rv_cornerRadius="5dp"
				android:text="获取验证码"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:gravity="center"
				android:textColor="@color/white"
				app:rv_backgroundColor="@color/app_color"
				android:layout_width="wrap_content"
				android:layout_height="50dp"/>

	</LinearLayout>


	<Button
			android:layout_width="match_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="35dp"
			android:textColor="@color/white"
			android:text="验证码登录"
			android:id="@+id/btn_login"
			android:background="@drawable/bg_btn_common1"
			android:layout_height="45dp"/>

	<Button
		android:id="@+id/btnOneKey"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="30dp"
		android:background="@drawable/bg_login_switch"
		android:text="使用「本机号码一键登录」"
		android:textColor="@color/app_color"
		android:textSize="16sp"
		/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="30dp">

		<View
			android:layout_gravity="center"
			android:layout_marginLeft="40dp"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_weight="1"
			android:background="#EBEBEB"/>

		<TextView
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:text="其他登录方式"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"/>

		<View
			android:layout_gravity="center"
			android:layout_marginRight="40dp"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_weight="1"
			android:background="#EBEBEB"/>

	</LinearLayout>

	<ImageView
		android:id="@+id/iv_wechat_login"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="20dp"
		android:layout_gravity="center"
		android:src="@drawable/wechat_login"
		android:layout_width="50dp"
		android:layout_height="50dp"/>

	<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginBottom="40dp">

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<CheckBox
			android:button="@drawable/checkedbox_bg"
			android:id="@+id/cb_login"
			android:layout_gravity="center"
			android:layout_width="14dp"
			android:layout_height="14dp"/>

		<TextView
			android:id="@+id/tv_login_protocol"
			android:gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textColor="#666666"
			android:textSize="12sp"
			android:layout_marginLeft="15dp"/>

		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"/>
	</LinearLayout>


</LinearLayout>