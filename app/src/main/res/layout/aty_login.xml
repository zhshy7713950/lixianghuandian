<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@drawable/bg_background"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<TextView
		android:id="@+id/tv_title1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="手机验证码登录"
		android:textColor="#ffffffff"
		android:textSize="20sp"
		android:layout_marginTop="60dp"
		android:layout_marginLeft="24dp"
		/>

	<TextView
		android:id="@+id/tv_title2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="未注册的手机号验证后将创建新账号"
		android:textColor="#ffb8c7d7"
		android:layout_marginLeft="24dp"
		android:layout_marginTop="8dp"
		android:textSize="14sp"
		/>


	<EditText
		android:inputType="phone"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="24dp"
		android:layout_marginTop="50dp"
		android:textSize="18sp"
		android:textColor="#666666"
		android:hint="请输入手机号码"
		android:background="@drawable/bg_login_input"
		android:id="@+id/et_phone"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="24dp"
		android:layout_marginTop="30dp">

		<EditText
			android:id="@+id/et_code"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="48dp"
			android:focusable="true"
			android:inputType="number"
			android:focusableInTouchMode="true"
			android:maxLength="6"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:background="@drawable/bg_login_input"
			android:textColor="#666666"
			android:hint="请输入验证码"
			android:layout_marginRight="24dp"
			/>

		<TextView
			android:id="@+id/tv_get_code"
			android:layout_width="0dp"
			android:layout_weight="0.618"
			android:layout_height="42dp"
			android:text="获取验证码"
			android:textColor="@color/black"
			android:textSize="14sp"
			android:gravity="center"
			android:background="@drawable/bg_btn_common1"
			/>
		
	</LinearLayout>

	<Button
		android:id="@+id/btnOtpLogin"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginTop="58dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:background="@drawable/bg_btn_common1"
		android:textColor="@color/black"
		android:text="验证码登录"
		android:textSize="16sp"
		/>

	<Button
		android:id="@+id/btnOneKey"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginTop="30dp"
		android:background="@drawable/bg_login_switch"
		android:text="使用「本机号码一键登录」"
		android:textColor="#CCCCCC"
		android:textSize="16sp"
		/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/ll_other"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<CheckBox
			android:id="@+id/cb_login"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:layout_marginLeft="50dp"
			android:checked="true"
			android:gravity="center"
			android:button="@drawable/check_box"
			app:layout_constraintRight_toLeftOf="@+id/tv_login_protocol"
			app:layout_constraintTop_toTopOf="@+id/tv_login_protocol"
			app:layout_constraintBottom_toBottomOf="@+id/tv_login_protocol"/>
		<TextView
			android:id="@+id/tv_login_protocol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#ffb8c7d7"
			android:textSize="12sp"
			android:maxLines="2"
			android:gravity="center_horizontal"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="40dp"
			/>


		<ImageView
			android:id="@+id/iv_wechat_login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/ic_login_wx"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:visibility="gone"
			app:layout_constraintBottom_toTopOf="@id/tv_login_protocol"
			android:layout_marginBottom="40dp"/>

		<TextView
			android:id="@+id/tv_3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="使用其他方式登录"
			android:visibility="gone"
			android:textColor="#ffbcc5cc"
			android:textSize="14sp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toTopOf="@id/iv_wechat_login"
			android:layout_marginBottom="20dp"
			/>
		<LinearLayout
			android:id="@+id/layout_test"
			android:layout_width="match_parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_marginBottom="10dp">
			<TextView
				android:id="@+id/tv_phone1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="13550160009"
				android:textColor="@color/white"
				/>
			<TextView
				android:id="@+id/tv_phone2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="13541349134"
				android:textColor="@color/white"
				android:layout_marginLeft="20dp"
				/>
			<TextView
				android:id="@+id/tv_phone3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="13540338214"
				android:textColor="@color/white"
				android:layout_marginLeft="20dp"
				/>
			<TextView
				android:id="@+id/tv_phone4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="15821989270"
				android:textColor="@color/white"
				android:layout_marginLeft="20dp"
				/>
		</LinearLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>