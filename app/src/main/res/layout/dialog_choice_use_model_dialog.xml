<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">


	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/rectangle_white_bg"
			android:orientation="vertical">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="10dp"
				android:text="请选择使用模式"
				android:textColor="@color/black_3"
				android:textSize="15sp" />


		<TextView
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:textSize="15sp"
				android:text="租电模式"
				android:gravity="center"
				android:textStyle="bold"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:textColor="@color/white"
				android:id="@+id/modelOne"
				android:background="@mipmap/choice_use_model_bg_1" />

		<TextView
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:textSize="15sp"
				android:text="换电模式"
				android:gravity="center"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="10dp"
				android:textStyle="bold"
				android:textColor="@color/white"
				android:id="@+id/modelTwo"
				android:background="@mipmap/choice_use_model_bg_2" />
	</LinearLayout>
</LinearLayout>