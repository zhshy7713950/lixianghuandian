<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#2E3440">
    <include layout="@layout/layout_topbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电池信息"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rectangle_gray_bg">
        <ImageView
            android:id="@+id/iv_battery_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/battery_five"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池编号"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ffb2c1ce"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_battery_num_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10000222"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="37dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池型号"
            android:textColor="#ffb2c1ce"
            android:textSize="12sp"
            android:layout_marginRight="41dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tv_battery_model_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="48伏50安"
            android:textColor="#ffffffff"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="44dp"
            android:background="@drawable/lin_ver"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv1"
            app:layout_constraintLeft_toRightOf="@id/tv2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租电套餐"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_gray_bg">

        <TextView
            android:id="@+id/tv_base_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           tools:text="成都1个月"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="111dp"/>
        <TextView
            android:id="@+id/tv_package_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           tools:text="开始时间："
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="136dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ff929fab"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            />
        <TextView
            android:id="@+id/tv_package_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           tools:text="结束时间："
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#ff929fab"
            android:textSize="12sp"
            android:layout_marginBottom="13dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@drawable/lin_ver"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="110dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_change_package_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="换电套餐"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_gray_bg">
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@drawable/lin_ver"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="110dp"/>
        <TextView
            android:id="@+id/tv_change_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            tools:text="单次换电"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="111dp"/>
        <TextView
            android:id="@+id/tv_change_package_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           tools:text="开始时间："
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="136dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ff929fab"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            />
        <TextView
            android:id="@+id/tv_change_package_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           tools:text="结束时间："
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#ff929fab"
            android:textSize="12sp"
            android:layout_marginBottom="13dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="剩余次数"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_change_times"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="不限次数"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:background="@drawable/rectangle_gray_bg"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_update_package"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="升级套餐"
            android:textColor="#ff272934"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn_common1"
            android:layout_marginBottom="80dp"
            />
        <TextView
            android:id="@+id/tv_change_battery"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="立即换电"
            android:textColor="#ff272934"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn_common1"
            android:layout_marginBottom="20dp"
            />
    </FrameLayout>
</LinearLayout>