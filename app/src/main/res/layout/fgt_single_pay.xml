<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2E3440"
    android:orientation="vertical">
    <include layout="@layout/layout_topbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rectangle_gray_bg">
        <ImageView
            android:id="@+id/iv_battery_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/battery_five"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池编号"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ffb2c1ce"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_battery_num_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10000222"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="37dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池型号"
            android:textColor="#ffb2c1ce"
            android:textSize="12sp"
            android:layout_marginRight="41dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tv_battery_model_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="48伏50安"
            android:textColor="#ffffffff"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="44dp"
            android:background="@drawable/lin_ver"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv1"
            app:layout_constraintLeft_toRightOf="@id/tv2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="¥200"
        android:textColor="#ff29ebb6"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效期：2023/08/02-2023/09/01"
        android:textColor="#ffb2c1ce"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：扫码换电后，10分钟内有效"
        android:textColor="#ff29ebb6"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付选项"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="20dp"
        android:background="@drawable/rectangle_gray_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:textColor="#ff929fab"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            />
        <RadioGroup
            android:id="@+id/rgPayRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <RadioButton
                android:id="@+id/rbWx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="微信支付"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:checked="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:drawablePadding="12dp"
                android:layout_marginTop="14dp"
                android:drawableLeft="@mipmap/ic_withdrawal_wx"
                android:drawableRight="@drawable/radio_select"
                android:button="@null">
            </RadioButton>
            <RadioButton
                android:id="@+id/rbAlipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="支付宝支付"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:drawablePadding="12dp"
                android:layout_marginTop="16dp"
                android:drawableLeft="@mipmap/ic_withdrawal_alipay"
                android:drawableRight="@drawable/radio_select"
                android:button="@null">
            </RadioButton>


        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_check_pay_rent_money"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/radio_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="我已仔细阅读并同意"
            android:textColor="#B8C7D7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_view_rant_protocol_pay_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="《租赁协议》"
            android:textColor="#29EBB6"
            android:textSize="12sp" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_gray_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计："
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            />
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="¥200.00"
            android:textColor="#ff29ebb6"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/btn_pay_now_pay_rent_money"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="立即支付"
            android:textColor="#ff272934"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/rectangle_pay_bg"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>