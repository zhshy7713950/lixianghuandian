<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_e"
              android:orientation="vertical">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/topbar_height"
			android:background="@color/app_color"
			android:elevation="3dp">


		<ImageView
				android:scaleType="fitXY"
				android:id="@+id/iv_my_order"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10dp"
				android:src="@drawable/my_order_shop"/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="@dimen/topbar_height"
				android:elevation="3dp"
				android:gravity="center"
				android:text="兑换商城"
				android:textColor="@color/white"/>

		<ImageView
				android:scaleType="fitXY"
				android:id="@+id/iv_search"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
				android:src="@drawable/search_shop"/>

	</RelativeLayout>

	<com.google.android.material.tabs.TabLayout
			android:elevation="2dp"
			android:layout_marginBottom="2dp"
			android:id="@+id/shopping_mall_tab_layout"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginTop="5dp"
			android:textSize="13sp"
			app:tabBackground="@color/white"
			app:tabIndicatorColor="@color/app_color"
			app:tabIndicatorHeight="3dp"
			app:tabSelectedTextColor="@color/app_color"
			app:tabTextColor="@color/black"/>


	<androidx.viewpager.widget.ViewPager
			android:id="@+id/shopping_mall_view_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

</LinearLayout>