<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:lineSpacingExtra="2dp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="11sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/goods_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF1C2C"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/goods_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:layout_toRightOf="@id/goods_newprice"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_A3"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:textSize="10sp"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/goods_coupons_layout"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="可抵扣 "
            android:background="@drawable/icon_coupons_red_bg"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/goods_coupons"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textColor="#FF3B3B"
            android:maxLines="1"
            android:gravity="center"
            android:background="@drawable/icon_coupons_gray_bg"
            android:textSize="13sp"/>

    </LinearLayout>


</LinearLayout>